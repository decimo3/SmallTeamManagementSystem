@model sge.Entities.Viatura

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center">
    <div class="card border-light w-50">
        <h1 class="text-center">Atualizar viatura</h1>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="placa" class="control-label"></label>
                <input asp-for="placa" class="form-control" />
                <span asp-validation-for="placa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ordem" class="control-label"></label>
                <input asp-for="ordem" class="form-control" />
                <span asp-validation-for="ordem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="situacaoViatura" class="control-label"></label>
                <select asp-for="situacaoViatura" class="form-control" asp-items="Html.GetEnumSelectList<Viatura.SituacaoViatura>()"></select>
                <span asp-validation-for="situacaoViatura" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <input type="submit" value="Save" class="btn btn-primary col-12" />
            </div>
        </form>
        <a asp-action="Index" class="py-2">
            <button class="btn btn-primary col-12">Cancel</button>
        </a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
